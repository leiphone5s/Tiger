<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg"
              android:orientation="vertical">
    <ImageView
        android:layout_width="800dp"
        android:layout_height="200dp"
        android:id="@+id/prizeresult" />

    <RelativeLayout
        android:layout_width="660pt"
        android:layout_height="560pt"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="660pt"
            android:layout_height="560pt"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_1"
                android:layout_width="130pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75pt"
                android:layout_marginTop="86pt"
                />

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_2"
                android:layout_width="128pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7pt"
                android:layout_marginTop="85pt"
                />

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_3"
                android:layout_width="128pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7pt"
                android:layout_marginTop="85pt"
                />

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_4"
                android:layout_width="128pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8pt"
                android:layout_marginTop="85pt"
                />


        </LinearLayout>


        <ImageView
            android:layout_width="660pt"
            android:layout_height="560pt"
            android:id="@+id/picture"
            android:background="@mipmap/laohuji"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/btn_select"
            android:id="@+id/reward_button"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:text="复位"
            android:id="@+id/restore_button"/>
    </LinearLayout>


</LinearLayout>
